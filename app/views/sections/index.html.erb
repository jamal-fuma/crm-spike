<h1>Listing sections</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Visible</th>
  </tr>

<% for section in @sections %>
  <tr>
    <td><%=h section.title %></td>
    <td><%=h section.content %></td>
    <td><%=h section.visible %></td>
    <td><%= link_to 'Show', page_section_path(@page,section) %></td>
    <td><%= link_to 'Edit', edit_page_section_path(@page,section) %></td>
    <td><%= link_to 'Destroy', page_section_path(@page,section), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New section', new_page_section_path(@page) %>
